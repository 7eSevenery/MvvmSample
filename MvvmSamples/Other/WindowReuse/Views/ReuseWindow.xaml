<Window
    x:Class="WindowReuse.Views.ReuseWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowReuse.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WindowReuse.ViewModels"
    Title="ReuseWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:ReuseWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <ContentControl Content="{Binding Reuse}" />
    </Grid>
</Window>
